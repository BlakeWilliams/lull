{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@common/*": ["src/common/*"],
      "@renderer/*": ["src/renderer/*"],
      "@main/*": ["src/main/*"]
    }
  }
}
